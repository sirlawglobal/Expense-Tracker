
<div class="container">
  <h1>Expense Tracker</h1>

  <div class="totals">
    <div class="card income">Income: â‚¦<%= income %></div>
    <div class="card expense">Expenses: â‚¦<%= expenses %></div>
    <div class="card profit">Profit: â‚¦<%= profit %></div>
  </div>

  <div class="forms">
    <form action="/add" method="POST" class="form-card">
      <h3>Add Transaction</h3>
      <select name="type" required>
        <option value="" disabled selected>Select Type</option>
        <option value="income">Income</option>
        <option value="expense">Expense</option>
      </select>
      <input type="number" name="amount" placeholder="Amount" required />
      <input type="text" name="category" placeholder="Category" />
      <input type="text" name="description" placeholder="Description" />
      <button type="submit">Add</button>
    </form>

    <form action="/upload" method="POST" enctype="multipart/form-data" class="form-card">
      <h3>Upload Receipt</h3>
      <input type="file" name="receipt" accept="image/*" required />
      <button type="submit">Upload</button>
    </form>

   <form id="voiceForm" action="/voice" method="POST" enctype="multipart/form-data" class="form-card">
  <h3>Voice Input</h3>
  <button type="button" id="recordBtn" class="record-btn">ğŸ™ï¸ Start Recording</button>
  <audio id="audioPreview" controls style="display:none; margin-top: 10px; width: 100%; border-radius: 5px;"></audio>
  <input type="file" name="audio" id="audioInput" accept="audio/*" style="display:none;" />
  <button type="submit" disabled id="submitVoice" class="submit-voice-btn">Submit</button>
</form>
  </div>

  <h3 class="transactions-title">Transactions</h3>
  <ul class="transactions">
    <% transactions.forEach(transaction => { %>
      <li class="<%= transaction.type %>">
        <%= transaction.date.toDateString() %> â€“ 
        â‚¦<%= transaction.amount %> â€“ 
